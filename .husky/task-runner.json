{
  "tasks": [
    {
      "name": "dotnet format",
      "group": "pre-commit",
      "command": "dotnet",
      "args": [ "format", "--severity", "info" ]
    },
    {
      "name": "dotnet build",
      "group": "pre-commit",
      "command": "dotnet",
      "args": [ "build" ]
    },
    {
      "name": "git add",
      "group": "pre-commit",
      "command": "git",
      "args": [ "add", "." ]
    }
  ]
}
